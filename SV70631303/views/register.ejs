<%- include('partials/header') %>

<style>
  @import url('https://fonts.cdnfonts.com/css/sodo-sans');

  :root {
    --coffee-dark: #4B382A;
    --coffee-medium: #8B5A2B;
    --coffee-light: #D2B48C;
    --coffee-cream: #F5E8D0;
    --coffee-accent: #A67C52;
    --coffee-text: #3E2723;
  }
  
  body {
    background-color: var(--coffee-cream);
    background-image: url('https://images.unsplash.com/photo-1445116572660-236099ec97a0?q=80&w=1000');
    background-size: cover;
    background-position: center;
    background-attachment: fixed;
    font-family: 'Sodo Sans Regular', sans-serif;
  }
  
  .register-container {
    min-height:120vh;
    display: flex;
    align-items: center;
    padding: 2rem 0;
    position: relative;
  }
  
  .register-container::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: rgba(75, 56, 42, 0.7);
    z-index: 0;
  }
  
  .register-card {
    background: white;
    border-radius: 12px;
    box-shadow: 0 8px 32px rgba(0, 0, 0, 0.2);
    overflow: hidden;
    transition: all 0.3s ease;
    border: none;
    position: relative;
    z-index: 1;
    background-color: white;
    border: 1px solid var(--coffee-medium);
    width: 100%;
    max-width: 500px;
    margin: 0 auto;
  }
  
  .register-header {
    background: linear-gradient(135deg, var(--coffee-dark) 0%, var(--coffee-medium) 100%);
    color: var(--coffee-cream);
    padding: 2rem;
    text-align: center;
    position: relative;
  }
  
  .register-header h2 {
    font-weight: 600;
    margin-bottom: 0.5rem;
    font-size: 2rem;
    letter-spacing: -0.5px;
  }
  
  .register-body {
    padding: 2rem;
  }
  
  .form-label {
    font-weight: 500;
    color: var(--coffee-text);
    margin-bottom: 0.5rem;
    display: block;
    font-size: 0.95rem;
  }
  
  .input-container {
    position: relative;
    margin-bottom: 1.5rem;
  }
  
  .form-control {
    border-radius: 8px;
    padding: 14px 16px 14px 48px;
    border: 1px solid #e0d6cc;
    transition: all 0.3s;
    background-color: white;
    width: 100%;
    font-size: 1rem;
    height: 50px;
  }
  
  .form-control:focus {
    border-color: var(--coffee-accent);
    box-shadow: 0 0 0 3px rgba(166, 124, 82, 0.1);
    outline: none;
  }
  
  .input-icon {
    position: absolute;
    left: 16px;
    top: 50%;
    transform: translateY(-50%);
    color: var(--coffee-medium);
    z-index: 2;
    font-size: 1rem;
  }
  
  .password-toggle {
    position: absolute;
    right: 16px;
    top: 50%;
    transform: translateY(-50%);
    cursor: pointer;
    color: var(--coffee-medium);
    z-index: 2;
    font-size: 1rem;
  }
  
  .btn-register {
    background: var(--coffee-dark);
    border: none;
    padding: 14px;
    font-weight: 500;
    border-radius: 8px;
    transition: all 0.3s;
    color: white;
    width: 100%;
    font-size: 1rem;
    margin-top: 1rem;
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 8px;
    height: 50px;
  }
  
  .btn-register:hover {
    background: var(--coffee-medium);
    transform: translateY(-2px);
  }
  
  .register-footer {
    text-align: center;
    padding: 1.5rem;
    color: var(--coffee-text);
    font-size: 0.9rem;
    border-top: 1px solid #e0d6cc;
  }
  
  .register-footer a {
    color: var(--coffee-medium);
    font-weight: 500;
    text-decoration: none;
    transition: all 0.3s;
  }
  
  .register-footer a:hover {
    color: var(--coffee-dark);
    text-decoration: underline;
  }
  
  .name-fields {
    display: flex;
    gap: 1rem;
  }
  
  .name-fields .input-container {
    flex: 1;
  }
  
  @media (max-width: 576px) {
    .name-fields {
      flex-direction: column;
      gap: 0;
    }
  }
</style>

<div class="register-container">
  <div class="register-card">
    <div class="register-header">
      <h2><i class="fas fa-coffee"></i> Crear Cuenta</h2>
      <p>Únete a nuestra comunidad cafetera</p>
    </div>
    
    <div class="register-body">
      <% if (error_msg && error_msg.length > 0) { %>
        <div class="alert alert-danger">
          <i class="fas fa-exclamation-circle me-2"></i>
          <%= error_msg %>
        </div>
      <% } %>
      
      <% if (success_msg && success_msg.length > 0) { %>
        <div class="alert alert-success">
          <i class="fas fa-check-circle me-2"></i>
          <%= success_msg %>
        </div>
      <% } %>
      
      <form action="/register" method="POST">
        <div class="name-fields">
          <div class="input-container">
            <label for="nombre" class="form-label">Nombre</label>
            <i class="fas fa-user input-icon"></i>
            <input type="text" class="form-control" id="nombre" name="nombre" placeholder=" " required>
          </div>
          
          <div class="input-container">
            <label for="apellido" class="form-label">Apellido</label>
            <i class="fas fa-user-tag input-icon"></i>
            <input type="text" class="form-control" id="apellido" name="apellido" placeholder=" " required>
          </div>
        </div>
        
        <div class="input-container">
          <label for="email" class="form-label">Correo Electrónico</label>
          <i class="fas fa-envelope input-icon"></i>
          <input type="email" class="form-control" id="email" name="email" placeholder=" " required>
        </div>
        
        <div class="input-container">
          <label for="password" class="form-label">Contraseña</label>
          <i class="fas fa-lock input-icon"></i>
          <input type="password" class="form-control" id="password" name="password" placeholder=" " required>
          <i class="far fa-eye password-toggle" id="togglePassword"></i>
        </div>
        
        <div class="input-container">
          <label for="confirm_password" class="form-label">Confirmar Contraseña</label>
          <i class="fas fa-lock input-icon"></i>
          <input type="password" class="form-control" id="confirm_password" name="confirm_password" placeholder=" " required>
          <i class="far fa-eye password-toggle" id="toggleConfirmPassword"></i>
        </div>
        
        <button type="submit" class="btn btn-register">
          <i class="fas fa-user-plus"></i> Registrarse
        </button>
      </form>
    </div>
    
    <div class="register-footer">
      ¿Ya tienes una cuenta? <a href="/login">Inicia sesión</a>
    </div>
  </div>
</div>

<script>
  // Toggle password visibility
  const togglePassword = document.querySelector('#togglePassword');
  const password = document.querySelector('#password');
  
  togglePassword.addEventListener('click', function() {
    const type = password.getAttribute('type') === 'password' ? 'text' : 'password';
    password.setAttribute('type', type);
    this.classList.toggle('fa-eye-slash');
  });
  
  // Toggle confirm password visibility
  const toggleConfirmPassword = document.querySelector('#toggleConfirmPassword');
  const confirmPassword = document.querySelector('#confirm_password');
  
  toggleConfirmPassword.addEventListener('click', function() {
    const type = confirmPassword.getAttribute('type') === 'password' ? 'text' : 'password';
    confirmPassword.setAttribute('type', type);
    this.classList.toggle('fa-eye-slash');
  });
</script>

